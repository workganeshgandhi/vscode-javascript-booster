{
    "name": "vscode-javascript-booster",
    "description": "Boost your productivity with advanced JavaScript refactorings and commands",
    "version": "0.12.3",
    "author": "Stepan Burguchev <me@sburg.net>",
    "license": "MIT",
    "engines": {
        "node": ">=8.0.0",
        "npm": ">=6.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/xsburg/vscode-javascript-booster.git"
    },
    "bugs": {
        "url": "https://github.com/xsburg/vscode-javascript-booster/issues"
    },
    "scripts": {
        "utils:generate:docs": "node ./build/generate-docs.js",
        "test:server": "cd server && npm test",
        "test:server:coverage": "cd server && npm test -- --coverage",
        "test:client": "cd client && npm test",
        "test": "npm run compile:dev && npm run test:server:coverage && npm run test:client",
        "compile:client:dev": "cd client && npm run compile:dev",
        "compile:client:test": "cd client && npm run compile:test",
        "compile:client:prod": "cd client && npm run compile:prod",
        "compile:server:dev": "cd server && npm run compile:dev",
        "compile:server:test": "cd server && npm run compile:test",
        "compile:server:prod": "cd server && npm run compile:prod",
        "compile:dev": "npm run compile:server:dev && npm run compile:client:dev",
        "compile:test": "npm run compile:server:test && npm run compile:client:test",
        "compile:prod": "npm run compile:server:prod && npm run compile:client:prod",
        "clean": "cd client && npm run clean",
        "package": "npm run clean && npm run compile:prod && cd client && vsce package",
        "publish": "cd client && vsce publish",
        "install:server": "cd server && npm install",
        "install:client": "cd client && npm install",
        "postinstall": "npm run install:server && npm run install:client",
        "preversion": "npm test",
        "version": "cd client && npm version $npm_package_version && git add -A",
        "postversion": "git push && git push --tags"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "typescript": "3.9.2",
        "fs-extra": "^9.0.0",
        "eslint": "^7.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.13.0",
        "eslint-plugin-simple-import-sort": "^5.0.3"
    }
}
