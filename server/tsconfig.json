{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["ES2015", "ES2017", "ES2019"],
        "strict": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": true,
        "rootDir": "./"
    },
    "include": ["./src/**/*", "./tests/**/*", "./typings/**/*"],
    "exclude": ["node_modules", ".vscode-test", "./tests/__codemod-fixtures__/**/*"]
}
